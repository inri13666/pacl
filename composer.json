{
  "name": "akuma/pacl",
  "description": "Asynchronous Centrifugo client",
  "keywords": [
    "Centrifugo",
    "client",
    "async",
    "websocket client"
  ],
  "license": "WTFPL",
  "autoload": {
    "psr-4": {
      "Akuma\\Centrifugo\\": "src"
    }
  },
  "require": {
    "php": ">=8.1",
    "evenement/evenement": "^3.0 || ^2.0",
    "fresh/datetime": "^2.0",
    "guzzlehttp/psr7": "^2.0 || ^1.7",
    "psr/log": "^3.0",
    "ratchet/rfc6455": "^0.3.1",
    "react/socket": "^1.9"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.20",
    "johnkary/phpunit-speedtrap": "^4.0",
    "pedrotroller/php-cs-custom-fixer": "^2.32",
    "phpunit/phpunit": "^9.3 || ^5.7 || ^4.8"
  },
  "suggest": {
    "reactivex/rxphp": "~2.0"
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "bin-dir": "bin"
  }
}
